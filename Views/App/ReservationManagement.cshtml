@model ReservationManagementViewModel
@{
    ViewBag.Title = "Reservation Management";

}
<button>Edit</button>
<button>Delete</button>
<br />
<div class="col-md-2 float-left">
    <form>
        <div class="form-group">
            <label>Check-in Date:</label>
            <input type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label>Check-out Date:</label>
            <input type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label>Number of nights:</label>
            <input type="number" class="form-control" />
        </div>
        <div class="form-group">
            <label>Guest Name:</label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label>Guest Phone Number:</label>
            <input type="tel" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Edit reservation" class="btn btn-primary btn-sm" />
        </div>
        <br />
    </form>
    <form>
        <div class="form-group">
            <label>Start Date:</label>
            <br />
            <input type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label>End Date:</label>
            <br />
            <input type="date" class="form-control" />
        </div>
        <div>
            <input type="submit" value="Optimize" class="btn btn-primary btn-sm" />
        </div>
        <br />
    </form>
</div>


