@using System
@using NonFactors.Mvc.Grid;
@model HotelManagement.Data.Entities.Room

<head>
    <link href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="~/css/mvc-grid/mvc-grid.css" rel="stylesheet">
</head>
@section Scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="col-md-4 offset-md-4">
    <div class="card card-body bg-light">
        <form asp-controller="Rooms" asp-action="Edit" method="post">
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.HotelId)
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="RoomNumber">Numarul Camerei:</label>
                <input type="number" asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonCapacity">Numar de persoane:</label>
                <input type="number" asp-for="PersonCapacity" class="form-control" />
                <span asp-validation-for="PersonCapacity" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsUsable">Este utilizabila?</label>
                <select asp-for="IsUsable" class="form-control" asp-items="Html.GetEnumSelectList<HotelManagement.Data.Enums.DaNu>()">
                    <option selected="selected" value="">Va rog selectati</option>
                </select>
                <span asp-validation-for="IsUsable" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsOccupied">Este ocupata?</label>
                <select asp-for="IsOccupied" class="form-control" asp-items="Html.GetEnumSelectList<HotelManagement.Data.Enums.DaNu>()">
                    <option selected="selected" value="">Va rog selectati</option>
                </select>
                <span asp-validation-for="IsOccupied" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Descriere:</label>
                <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editare" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
</div>
